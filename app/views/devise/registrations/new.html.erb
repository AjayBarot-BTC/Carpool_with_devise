<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true } ) do |f| %>
  <%= devise_error_messages! %>
  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div>
  <%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %>
  </div>

  <div>
  <%= f.label :password %><br />
  <%= f.password_field :password %>
  </div>

  <div>
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %>
  </div>

  <div>
  <%= f.label :Profile_Image %>
  <%= f.file_field :image %>	
  </div>

  <div>
  <%= f.label :Gender %>
  <%= f.text_field :gender %>
  </div>

  <div>
  <%= f.label :City %>
  <%= f.text_field :city %>
  </div>

  <div>
  <%= f.label :Year_of_Birth %>
  <%= f.text_field :year_of_birth %>
  </div>
  
  <div>
  <%= f.label :Profession %>
  <%= f.text_field :profession %>
  </div>

  <div>	
  <%= f.label :Phone_no %>
  <%= f.text_field :phone_no %>
  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>



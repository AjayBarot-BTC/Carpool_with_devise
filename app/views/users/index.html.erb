<% if current_user != (@user) %>
 		<ol class="microposts">
 		<p><%= link_to "Advanced Search", searches_path %></p>
 		<%= form_tag(:users, method: "get") do %>
 			<%= text_field_tag "search", params[:search], placeholder: "Search by Name" %><br>
 			<%= submit_tag "Search", name: nil, class: "btn btn-danger" %><br><br>		

 			<%= text_field_tag "search2", params[:search2], placeholder: "Search by destination" %>
 			<%= submit_tag "Search2", name: nil, class: "btn btn-danger" %><br><br>
 			
 			<% @users.each do |user| %> 
 				<%= render user %>
 			<% end %>
 		</ol>
 		<%= will_paginate @users %>	
 		<% end %>
<% end %>
 <li id="<%= feed_item.id %>">
 <%= image_tag current_user.image_url(:thumb).to_s %>
 <span class="user"><br>
  <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="destination">
    <b>Source:</b>
    <%= feed_item.source %>
  </span>
  <span class="destination">
  <b>Destination:</b>
  <%= feed_item.destination %>
  </span>
  <span class="destination">
   <b>Date:</b>
   <%= feed_item.date %> 
  </span>
  <span class="timestamp">
    <b>Time:</b>
    <%= feed_item.time %>
  </span>
  <span class="content">
  <b>Comment:</b>
  <%= feed_item.content %>
  </span>
  <br>
  <span class="timestamp">
  Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  <% if current_user == feed_item.user %>
  <div class="icon-remove">
  <%= link_to "", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.content, class: "icon-remove" %>
  </div>
  <% end %>
  </span>
  </li>
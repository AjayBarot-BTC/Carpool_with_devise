!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %title Google Maps
    %script{src: "http://maps.google.com/maps/api/js?sensor=false", type: "text/javascript"}
      :cdata
    %script{src: "https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js", type: "text/javascript"}
      :cdata
    %script{src: "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js", type: "text/javascript"}
      :cdata
  %body
    = form_for(@request) do |f|
      = render 'shared/error_messages', object: f.object
      #container
        #instructions
          %h1 Enter Location
          = f.text_field :destination, placeholder: "Start typing a destination place  ...", type: "text", id: "gmaps-input-address"
          %br/
          %br/
          = f.text_field :source, placeholder: "Start typing a source place...", type: "text", id: "gmaps-input-address"
          %br/
          #gmaps-error
          #gmaps-canvas
          %br/
        .bfh-datepicker
          = f.text_field :date, 'data-behaviour' => 'datepicker', placeholder: "Enter Date"
          :javascript
            $(document).ready(function(){
            $('[data-behaviour~=datepicker]').datepicker();
            })
          %br/
          %br/
          %br/
          %br/
          %br/
          %br/
          %br/
          %br/
          %br/
          %br/
          %br/
          %br/
          %br/
        = f.text_field :time, placeholder: "Time"
        = f.text_area :content, placeholder: "Comment", align: "center"
        %br/
        = f.submit "Post", class: "btn btn-large btn-primary"